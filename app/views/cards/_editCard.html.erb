<%= form_for @card_edit, :url => edit_card_path, :html => {:method => :patch } do |f| %>
    <% if @card.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@card.errors.count, "error") %> prohibited this user from being saved:</h2>
          <ul>
            <% @card.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

<div class="panel panel-default">
    <div class="panel-body">
        <%= f.label :family %>
        <br>
        <%= f.select :family, [['Project', 'project'], ['Skill Share', 'skill share'], ['Networking','networking']] %>
        <br>
        <%= f.label :title %>
        <br>
        <%= f.text_field :title %>
        <br>
        <%= f.label :working_on %>
        <br>
        <%= f.text_area :working_on %>
        <%= f.hidden_field :user_id, value: current_user.id%>
    </div>
    <div class="panel-footer">
        <%= f.submit "Save", class: 'btn btn-success' %>
    </div>
  <% end %>
