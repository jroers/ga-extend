<!-- render user profile here -->
<div class="container">
	<div class="col-md-4">
		<div class="panel panel-default">
			<div class="panel-heading">
				<%= @user.first %> <%= @user.last %>'s profile
			</div>
			<div class="panel-body">
				<div class="col-md-4 profile"> 
					<% if @user.image? %>
						<%= image_tag @user.image.url(:thumb) %> <br>
						<%= link_to 'Delete Photo', delete_photo_path, method: :put, class: "profile_pic" %>
					<% else %>
						<%= image_tag "/assets/default.png", size: "100", class: "profile_pic" %>
					<% end %>

				</div>
				<div class="col-md-7 profile">
				<p><strong>Email:</strong> <%= @user.email %></p>
				<p><strong>Program:</strong> <br> <%= @user.program %> <%= @user.cohort %></p>
				<p><strong>Current title:</strong> <%= @user.current_title %></p>
				</div>
			</div>
			<div class="panel-footer">
			<!-- modal button -->
				<%= link_to "Edit Profile", "#", class: 'btn btn-warning', 'data-target' => "#editProfileModal_#{current_user.id}", 'data-toggle' => 'modal'  %>
			<!-- new card modal button -->
				<%= link_to "Add new Card", "#", class: 'btn btn-warning', 'data-target' => "#newCardModal", 'data-toggle' => 'modal'  %>
			</div> 
		</div>
	</div>

 <!-- card container -->

	<div class="col-md-7 col-md-offset-1">
		<% @cards.each do |card| %>
			<div class="panel panel-default">
				<div class="panel-heading">
				<strong>Type:</strong> <%= card.family %>
				</div>
			<div class="panel-body">
				<p><strong>Title:</strong><br><%= card.title %> </p>
				<p><strong>Description:</strong><br><%= card.working_on %> </p>
				<!-- will remove card.id later -->
				<p> card id: <%= card.id %> </p>
			</div>
			<div class="panel-footer">
				<%= link_to "Edit Card", edit_card_path(card.id), class: 'btn btn-warning', 'data-target' => "#editCardModal", 'data-toggle' => 'modal' %>
				<%= link_to "Delete Card", delete_card_path(card.id), method: :delete, class: "btn btn-danger" %>
			</div>
			</div>
		<% end %>
	</div>
</div>
<!-- profile modal html -->
<div class="modal fade" id='<%= "editProfileModal_#{current_user.id}" %>' role="dialog" aria-labelledby="editProfileModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="editProfileModalLabel">Edit Profile</h4>
      </div>
      <div class="modal-body">
        <%= render 'users/form', user: current_user %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<!-- edit card modal -->
		<div class="modal fade" id='<%= "editCardModal" %>' role="dialog" aria-labelledby="editCardModalLabel" aria-hidden="true">
		  <div class="modal-dialog">
		    <div class="modal-content">
		      <div class="modal-header">
		        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
		        <h4 class="modal-title" id="newCardModalLabel">Edit Card</h4>
		      </div>
		      <div class="modal-body">
		        <%= render 'cards/editCard', card: @card.id %>		      
		      </div>
      		<div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<!-- new card modal html -->
<div class="modal fade" id='<%= "newCardModal" %>' role="dialog" aria-labelledby="newCardModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="newCardModalLabel">New Card</h4>
      </div>
      <div class="modal-body">
        <%= render 'cards/newCard' %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->
