<!DOCTYPE html>
<html>
<head>
  <title>GA Extend</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
<!-- viewport basics -->
	<meta name="viewport" content="width=device-width, initial-scale=1">
<!-- fonts -->
  <link href='https://fonts.googleapis.com/css?family=Roboto' rel='stylesheet' type='text/css'>
</head>
<body>
<!-- navbar -->
  <nav class="navbar navbar-default navbar-static-top" role="navigation">
    <div class="container-fluid">
      <!-- Brand and toggle get grouped for better mobile display -->
      <div class="navbar-header">
        <a class="navbar-brand"><a class="navbar-brand" href="/"> 
          <img class="navIcon" src=".images/gax_logo_sm.png" >
        </a>
        <button class="navbar-toggle" data-toggle="collapse" data-target="#navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
        </button>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse" id="navbar">
        <ul class="nav navbar-nav navbar-right">
            <li><%= link_to "About", "#", class: "navbar-link" %>
          <% if current_user %>
            <li><%= link_to "Profile", user_path(current_user), id: "user_link", class: "navbar-link"  %></li>
            <li><%= link_to "Logout", logout_path, id: "logout_link", class: "navbar-link"  %></li>
          <% else %>
            <li><%= link_to "Sign Up", signup_path, id: "signup_link" %></li>
            <li><%= link_to "Login", login_path, id: "login_link" %></li>
          <% end %>
        </ul>
      </div><!-- /.navbar-collapse -->
    </div><!-- /.container-fluid -->
  </nav>

  <!-- flash notices -->
    <% flash.each do |name, msg| %>
    <% if name == "error" %>
      <p class="alert-danger">
    <% else %>
      <p class="alert-success">
    <% end %>
      <small> <%= name.capitalize %>: <%= msg %> </small>
    </p>
  <% end %>

<%= yield %>

</body>
</html>
