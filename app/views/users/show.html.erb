<!-- render user profile here -->
<div class="container">
<!-- inline style is temporary -->
	<h1 style="text-align: center;">Welcome to <%= @user.first %> <%= @user.last %>'s profile.
	</h1>
	<div class="col-md-6 col-md-offset-3">
		<div class="panel panel-default">
			<div class="panel-heading">
				Profile
			</div>
			<div class="panel-body">
				<p><strong>Email:</strong> <%= @user.email %></p>
				<p><strong>Program:</strong> <%= @user.program %> <%= @user.cohort %></p>
				<p><strong>Current title:</strong> <%= @user.current_title %></p>
			</div>
			<div class="panel-footer">
			<!-- modal button -->
				<%= link_to "Edit Profile", "#", class: 'btn btn-warning', 'data-target' => "#editProfileModal_#{current_user.id}", 'data-toggle' => 'modal'  %>
			</div> 
		</div>
	</div>
</div>

<!-- profile modal html -->
<div class="modal fade" id='<%= "editProfileModal_#{current_user.id}" %>' role="dialog" aria-labelledby="editProfileModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="editProfileModalLabel">Edit Profile</h4>
      </div>
      <div class="modal-body">
        <%= render 'users/form', user: current_user %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

<!-- render cards here, inline style is temperary -->
<h2 style="text-align: center;"> Cards go below here: <br>
<%= button_to "Add new card", "#", class: "btn btn-warning" %></h2>
<div class="container"> 
	<div class="col-md-6 col-md-offset-3 block">
		<% @cards.each do |card| %>
			<div class="panel panel-default">
				<div class="panel-heading">
				<strong>Type:</strong> <%= card.family %>
				</div>
			<div class="panel-body">
				<p><strong>Title:</strong><br><%= card.title %> </p>
				<p><strong>Description:</strong><br><%= card.working_on %> </p>
			</div>
			<div class="panel-footer">
				<%= button_to "Edit card", "#", class: "btn btn-warning" %>
			</div>
			</div>
		<% end %>
	</div>
</div>

<!-- new card modal html -->
<div class="modal fade" id='<%= "newCardModal_#{current_user.id}" %>' role="dialog" aria-labelledby="newCardModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="newCardModalLabel">New Card</h4>
      </div>
      <div class="modal-body">
        <%= render 'cards/newCard', user: current_user %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
      </div>
    </div><!-- /.modal-content -->
  </div><!-- /.modal-dialog -->
</div><!-- /.modal -->

